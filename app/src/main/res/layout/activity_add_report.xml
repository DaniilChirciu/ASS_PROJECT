<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/mainWhite"
    tools:context=".presentation.feature.report.ui.AddReportActivity">


    <ImageView
        android:id="@+id/back"
        android:layout_width="@dimen/_25sdp"
        android:layout_height="@dimen/_25sdp"
        android:layout_marginStart="@dimen/_13sdp"
        android:layout_marginTop="@dimen/_18sdp"
        android:src="@drawable/back_ic"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/back"
        app:layout_constraintBottom_toBottomOf="parent"
        android:scrollbars="none">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">



            <androidx.cardview.widget.CardView
                android:id="@+id/cardView2"
                android:layout_width="@dimen/_150sdp"
                android:layout_height="@dimen/_150sdp"
                android:backgroundTint="@color/white"
                android:layout_marginTop="@dimen/_13sdp"
                app:cardCornerRadius="@dimen/_20sdp"
                app:cardElevation="0dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:layout_width="@dimen/_40sdp"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_gravity="center"
                    android:scaleType="centerCrop"
                    android:src="@drawable/empty_pets" />

                <ImageView
                    android:id="@+id/pet_image"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop" />


            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:id="@+id/plusCard"
                android:layout_width="@dimen/_35sdp"
                android:layout_height="@dimen/_35sdp"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="@dimen/_6sdp"
                app:cardElevation="@dimen/_2sdp"
                android:layout_marginTop="@dimen/_minus13sdp"
                app:layout_constraintEnd_toEndOf="@+id/cardView2"
                app:layout_constraintStart_toStartOf="@+id/cardView2"
                app:layout_constraintTop_toBottomOf="@+id/cardView2">


                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="@dimen/_10sdp"
                    app:tint="@color/main"
                    android:src="@drawable/image_ic"/>

            </androidx.cardview.widget.CardView>





            <TextView
                android:id="@+id/textView"
                style="@style/Text_Regular"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Время прибытия питомца"
                android:layout_marginTop="@dimen/_13sdp"
                android:textColor="@color/textSecond"
                android:textSize="@dimen/_12ssp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/plusCard" />





            <TextView
                android:id="@+id/pet_report_time"
                android:layout_width="0dp"
                android:layout_height="@dimen/_46sdp"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="@dimen/_13sdp"
                android:elevation="@dimen/_2sdp"
                android:gravity="center|left"
                android:hint="Время прибытия"

                android:paddingStart="@dimen/_13sdp"
                android:textSize="@dimen/_12ssp"
                android:textColor="@color/textPrime"
                style="@style/Text_Regular"
                android:textColorHint="@color/textSecond"
                android:layout_marginEnd="@dimen/_18sdp"
                android:layout_marginStart="@dimen/_18sdp"
                android:background="@drawable/bg_for_edittext"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView" />


            <TextView
                android:id="@+id/textView3"
                style="@style/Text_Regular"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Комментарий"
                android:layout_marginTop="@dimen/_13sdp"
                android:textColor="@color/textSecond"
                android:textSize="@dimen/_12ssp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/pet_report_time" />


            <EditText
                android:id="@+id/pet_report_desc"
                android:layout_width="0dp"
                android:layout_height="@dimen/_46sdp"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="@dimen/_13sdp"
                android:elevation="@dimen/_2sdp"
                android:hint="Вёл себя хорошо"

                android:paddingStart="@dimen/_13sdp"
                android:textSize="@dimen/_12ssp"
                android:textColor="@color/textPrime"
                style="@style/Text_Regular"
                android:textColorHint="@color/textSecond"
                android:layout_marginEnd="@dimen/_18sdp"
                android:layout_marginStart="@dimen/_18sdp"
                android:background="@drawable/bg_for_edittext"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView3" />


            <TextView
                android:id="@+id/textView6"
                style="@style/Text_Regular"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Почта владельца"
                android:layout_marginTop="@dimen/_13sdp"
                android:textColor="@color/textSecond"
                android:textSize="@dimen/_12ssp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/pet_report_desc" />


            <EditText
                android:id="@+id/pet_user_email"
                android:layout_width="0dp"
                android:layout_height="@dimen/_46sdp"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="@dimen/_13sdp"
                android:elevation="@dimen/_2sdp"
                android:hint="user@mail.ru"
                android:inputType="textEmailAddress"
                android:paddingStart="@dimen/_13sdp"
                android:textSize="@dimen/_12ssp"
                android:textColor="@color/textPrime"
                style="@style/Text_Regular"
                android:textColorHint="@color/textSecond"
                android:layout_marginEnd="@dimen/_18sdp"
                android:layout_marginStart="@dimen/_18sdp"
                android:background="@drawable/bg_for_edittext"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView6" />







            <com.google.android.material.button.MaterialButton
                android:id="@+id/saveBtn"
                style="@style/Text_Regular"
                android:layout_width="0dp"
                android:layout_height="@dimen/_46sdp"
                android:layout_marginStart="@dimen/_18sdp"
                android:layout_marginEnd="@dimen/_13sdp"
                android:layout_marginBottom="@dimen/_18sdp"
                android:text="Сохранить"
                android:layout_marginTop="@dimen/_42sdp"
                android:textColor="@color/white"
                android:textSize="@dimen/_12ssp"
                app:backgroundTint="@color/main"
                app:cornerRadius="@dimen/_10sdp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/pet_user_email" />




        </androidx.constraintlayout.widget.ConstraintLayout>



    </ScrollView>






</androidx.constraintlayout.widget.ConstraintLayout>