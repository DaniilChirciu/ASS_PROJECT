<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/mainWhite"
    tools:context=".presentation.feature.pet.ui.WeightFragment">

    <!-- Верхний блок с изображением питомца -->
    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="@dimen/_160sdp"
        android:layout_height="@dimen/_160sdp"
        android:scaleType="centerCrop"
        android:src="@drawable/circle_lines"
        app:layout_constraintBottom_toBottomOf="@+id/cardView2"
        app:layout_constraintEnd_toEndOf="@+id/cardView2"
        app:layout_constraintStart_toStartOf="@+id/cardView2"
        app:layout_constraintTop_toTopOf="@+id/cardView2" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView2"
        android:layout_width="@dimen/_90sdp"
        android:layout_height="@dimen/_90sdp"
        android:layout_marginTop="@dimen/_52sdp"
        android:backgroundTint="@android:color/transparent"
        app:cardCornerRadius="@dimen/_360sdp"
        app:cardElevation="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/pet_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/pet_image"/>
    </androidx.cardview.widget.CardView>

    <!-- Текст "Какой вес вашего питомца?" -->
    <TextView
        android:id="@+id/weightTitle"
        style="@style/Text_Regular"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Какой вес вашего питомца?"
        android:layout_marginTop="@dimen/_13sdp"
        android:textColor="@color/textSecond"
        android:textSize="@dimen/_12ssp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView3" />

    <!-- Большой текст для отображения веса -->
    <TextView
        android:id="@+id/weightValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="5,0"
        android:textSize="@dimen/_52ssp"
        android:textColor="@color/main"
        style="@style/Text_Bold"
        app:layout_constraintTop_toBottomOf="@id/weightTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="@dimen/_16sdp"/>

    <TextView
        style="@style/Text_Bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_13sdp"
        android:text="кг"
        android:textColor="#CC1B85F3"
        android:textSize="@dimen/_18ssp"

        app:layout_constraintBottom_toBottomOf="@+id/weightValue"

        app:layout_constraintStart_toEndOf="@+id/weightValue"
        app:layout_constraintTop_toTopOf="@+id/weightValue" />

    <!-- SeekBar для выбора веса -->
    <SeekBar
        android:id="@+id/weightSeekBar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:max="500"
        android:progress="59"
        android:thumb="@drawable/custom_seekbar_thumb"
        android:progressDrawable="@drawable/custom_seekbar_thumb2"
        app:layout_constraintTop_toBottomOf="@+id/weightValue"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="@dimen/_13sdp"
        android:layout_marginEnd="@dimen/_13sdp"
        android:layout_marginTop="@dimen/_18sdp"
       />
</androidx.constraintlayout.widget.ConstraintLayout>
