<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/mainWhite"
    tools:context=".presentation.feature.pet.ui.SizeFragment">

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="@dimen/_160sdp"
        android:layout_height="@dimen/_160sdp"
        android:scaleType="centerCrop"
        android:src="@drawable/circle_lines"
        app:layout_constraintBottom_toBottomOf="@+id/cardView2"
        app:layout_constraintEnd_toEndOf="@+id/cardView2"
        app:layout_constraintStart_toStartOf="@+id/cardView2"
        app:layout_constraintTop_toTopOf="@+id/cardView2" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView2"
        android:layout_width="@dimen/_90sdp"
        android:layout_height="@dimen/_90sdp"
        android:layout_marginTop="@dimen/_52sdp"
        android:backgroundTint="@android:color/transparent"
        app:cardCornerRadius="@dimen/_360sdp"
        app:cardElevation="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/pet_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"

            android:src="@drawable/pet_image" />


    </androidx.cardview.widget.CardView>


    <TextView
        android:id="@+id/textView"
        style="@style/Text_Regular"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Какой размер вашего питомца?"
        android:layout_marginTop="@dimen/_13sdp"
        android:textColor="@color/textSecond"
        android:textSize="@dimen/_12ssp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView3" />


    <!-- ВАЖНО: RecyclerView для карусели (вертикальной или горизонтальной) -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/weightCarouselRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_200sdp"
        android:orientation="horizontal"

        app:layout_constraintTop_toBottomOf="@+id/textView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="@dimen/_13sdp"
        tools:listitem="@layout/item_weight"
        />



</androidx.constraintlayout.widget.ConstraintLayout>