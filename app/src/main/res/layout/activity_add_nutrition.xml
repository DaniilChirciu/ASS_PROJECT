<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/mainWhite"
    tools:context=".presentation.feature.pet.ui.NameFragment">


    <ImageView
        android:id="@+id/back"
        android:layout_width="@dimen/_25sdp"
        android:layout_height="@dimen/_25sdp"
        android:layout_marginStart="@dimen/_13sdp"
        android:layout_marginTop="@dimen/_18sdp"
        android:src="@drawable/back_ic"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="@dimen/_120sdp"
        android:layout_height="@dimen/_120sdp"
        android:scaleType="centerCrop"
        android:src="@drawable/circle_lines"
        app:layout_constraintBottom_toBottomOf="@+id/cardView2"
        app:layout_constraintEnd_toEndOf="@+id/cardView2"
        app:layout_constraintStart_toStartOf="@+id/cardView2"
        app:layout_constraintTop_toTopOf="@+id/cardView2" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView2"
        android:layout_width="@dimen/_100sdp"
        android:layout_height="@dimen/_100sdp"
        android:layout_marginTop="@dimen/_32sdp"
        android:backgroundTint="@android:color/transparent"
        app:cardCornerRadius="@dimen/_360sdp"
        app:cardElevation="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:layout_width="@dimen/_40sdp"
            android:layout_gravity="center"
            android:layout_height="@dimen/_40sdp"
            android:scaleType="centerCrop"
            app:tint="@color/textSecond"
            android:src="@drawable/food_ic" />

        <ImageView
            android:id="@+id/pet_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            />


    </androidx.cardview.widget.CardView>


    <androidx.cardview.widget.CardView
        android:id="@+id/plusCard"
        android:layout_width="@dimen/_35sdp"
        android:layout_height="@dimen/_35sdp"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="@dimen/_6sdp"
        app:cardElevation="@dimen/_2sdp"
        android:layout_marginTop="@dimen/_minus13sdp"
        app:layout_constraintEnd_toEndOf="@+id/cardView2"
        app:layout_constraintStart_toStartOf="@+id/cardView2"
        app:layout_constraintTop_toBottomOf="@+id/cardView2">


        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/_10sdp"
            android:src="@drawable/image_ic"/>

    </androidx.cardview.widget.CardView>





    <TextView
        android:id="@+id/textView"
        style="@style/Text_Regular"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Что ест ваш питомец?"
        android:textColor="@color/textSecond"
        android:textSize="@dimen/_12ssp"
        android:layout_marginTop="@dimen/_18sdp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/plusCard" />


    <EditText
        android:id="@+id/pet_food_name"
        android:layout_width="0dp"
        android:layout_height="@dimen/_46sdp"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="@dimen/_13sdp"
        android:elevation="@dimen/_2sdp"
        android:hint="Название еды"

        android:paddingStart="@dimen/_13sdp"
        android:textSize="@dimen/_12ssp"
        android:textColor="@color/textPrime"
        style="@style/Text_Regular"
        android:textColorHint="@color/textSecond"
        android:layout_marginEnd="@dimen/_18sdp"
        android:layout_marginStart="@dimen/_18sdp"
        android:background="@drawable/bg_for_edittext"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />


    <TextView
        android:id="@+id/textView3"
        style="@style/Text_Regular"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Комментарий"
        android:layout_marginTop="@dimen/_13sdp"
        android:textColor="@color/textSecond"
        android:textSize="@dimen/_12ssp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pet_food_name" />


    <EditText
        android:id="@+id/pet_food_desc"
        android:layout_width="0dp"
        android:layout_height="@dimen/_46sdp"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="@dimen/_13sdp"
        android:elevation="@dimen/_2sdp"
        android:hint="Не любит холодное..."

        android:paddingStart="@dimen/_13sdp"
        android:textSize="@dimen/_12ssp"
        android:textColor="@color/textPrime"
        style="@style/Text_Regular"
        android:textColorHint="@color/textSecond"
        android:layout_marginEnd="@dimen/_18sdp"
        android:layout_marginStart="@dimen/_18sdp"
        android:background="@drawable/bg_for_edittext"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />


    <TextView
        android:id="@+id/textView2"
        style="@style/Text_Regular"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Когда он это ест?"
        android:layout_marginTop="@dimen/_13sdp"
        android:textColor="@color/textSecond"
        android:textSize="@dimen/_12ssp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/pet_food_desc"
        />


    <HorizontalScrollView
        android:id="@+id/scroll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none"
        android:layout_marginTop="@dimen/_13sdp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <com.google.android.material.button.MaterialButton

                android:id="@+id/breakfast_btn"
                android:layout_width="wrap_content"

                android:layout_marginEnd="@dimen/_5sdp"
                android:layout_marginStart="@dimen/_13sdp"
                android:backgroundTint="@android:color/transparent"
                android:text="Завтрак"
                style="@style/Text_Regular"
                android:layout_height="@dimen/_42sdp"
                android:textColor="@color/textSecond"
                app:strokeColor="@color/textSecond"
                android:textSize="@dimen/_12ssp"
                app:strokeWidth="@dimen/_2sdp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/lunch_btn"
                android:layout_width="wrap_content"
                android:layout_marginEnd="@dimen/_5sdp"
                android:backgroundTint="@android:color/transparent"
                android:text="Обед"
                style="@style/Text_Regular"
                android:layout_height="@dimen/_42sdp"
                android:textColor="@color/textSecond"
                app:strokeColor="@color/textSecond"
                android:textSize="@dimen/_12ssp"
                app:strokeWidth="@dimen/_2sdp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/afternoon_snack_btn"
                android:layout_width="wrap_content"
                android:layout_marginEnd="@dimen/_5sdp"
                android:backgroundTint="@android:color/transparent"
                android:text="Полдник"
                style="@style/Text_Regular"
                android:layout_height="@dimen/_42sdp"
                android:textColor="@color/textSecond"
                app:strokeColor="@color/textSecond"
                android:textSize="@dimen/_12ssp"
                app:strokeWidth="@dimen/_2sdp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/dinner_btn"
                android:layout_width="wrap_content"
                android:layout_marginEnd="@dimen/_5sdp"
                android:backgroundTint="@android:color/transparent"
                android:text="Ужин"
                style="@style/Text_Regular"
                android:layout_height="@dimen/_42sdp"
                android:textColor="@color/textSecond"
                app:strokeColor="@color/textSecond"
                android:textSize="@dimen/_12ssp"
                app:strokeWidth="@dimen/_2sdp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/other_btn"
                android:layout_width="wrap_content"
                android:layout_marginEnd="@dimen/_5sdp"
                android:backgroundTint="@android:color/transparent"
                android:text="Другое"
                style="@style/Text_Regular"
                android:layout_height="@dimen/_42sdp"
                android:textColor="@color/textSecond"
                app:strokeColor="@color/textSecond"
                android:textSize="@dimen/_12ssp"
                app:strokeWidth="@dimen/_2sdp" />


            <com.google.android.material.button.MaterialButton
                android:id="@+id/in_any_time_btn"
                android:layout_width="wrap_content"
                android:layout_marginEnd="@dimen/_5sdp"
                android:backgroundTint="@android:color/transparent"
                android:text="В любое время"
                style="@style/Text_Regular"
                android:layout_height="@dimen/_42sdp"
                android:textColor="@color/textSecond"
                app:strokeColor="@color/textSecond"
                android:textSize="@dimen/_12ssp"
                app:strokeWidth="@dimen/_2sdp" />






        </LinearLayout>


    </HorizontalScrollView>





    <com.google.android.material.button.MaterialButton
        android:id="@+id/saveBtn"
        android:layout_width="0dp"
        android:layout_height="@dimen/_46sdp"
        android:layout_marginBottom="@dimen/_18sdp"
        android:layout_marginStart="@dimen/_18sdp"
        android:layout_marginEnd="@dimen/_13sdp"
        android:text="Сохранить"
        style="@style/Text_Regular"
        android:textSize="@dimen/_12ssp"
        android:textColor="@color/white"
        app:backgroundTint="@color/main"
        app:cornerRadius="@dimen/_10sdp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />



</androidx.constraintlayout.widget.ConstraintLayout>