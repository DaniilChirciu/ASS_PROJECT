<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bottom_picker"
    android:padding="@dimen/_13sdp">

    <TextView
        android:id="@+id/title"
        style="@style/Text_Bold"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/_32sdp"
        android:layout_marginTop="@dimen/_18sdp"
        android:text="Редактировать"

        android:textColor="@color/textPrime"
        android:textSize="@dimen/_16ssp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <EditText
        android:id="@+id/editText"
        android:layout_width="0dp"
        android:layout_height="@dimen/_46sdp"
        app:layout_constraintEnd_toEndOf="parent"
        android:elevation="@dimen/_1sdp"
        android:hint="29.10.2025"
        android:paddingStart="@dimen/_13sdp"
        android:textSize="@dimen/_12ssp"
        android:textColor="@color/textPrime"
        style="@style/Text_Regular"
        android:textColorHint="@color/textSecond"
        android:layout_marginTop="@dimen/_13sdp"
        android:background="@drawable/bg_for_edittext"
        app:layout_constraintTop_toBottomOf="@id/title"
        app:layout_constraintStart_toStartOf="parent" />




    <Button
        style="@style/Text_Regular"
        android:textColor="@color/white"
        android:textSize="@dimen/_12ssp"
        android:id="@+id/saveButton"
        android:layout_marginTop="@dimen/_62sdp"
        android:layout_marginBottom="@dimen/_62sdp"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_46sdp"
        android:text="Сохранить"
       android:backgroundTint="@color/main"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/editText" />
</androidx.constraintlayout.widget.ConstraintLayout>
