<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/mainWhite"
    tools:context=".presentation.feature.pet.ui.AddPetActivityActivity">


    <ImageView
        android:id="@+id/back"
        android:layout_width="@dimen/_25sdp"
        android:layout_height="@dimen/_25sdp"
        android:layout_marginStart="@dimen/_13sdp"
        android:layout_marginTop="@dimen/_18sdp"
        android:src="@drawable/back_ic"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/textView"
        style="@style/Text_Regular"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Когда питомец был или будет привит?"
        android:layout_marginTop="@dimen/_32sdp"
        android:textColor="@color/textSecond"
        android:textSize="@dimen/_12ssp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/back" />


    <TextView
        android:id="@+id/pet_vaccine_time"
        android:layout_width="0dp"
        android:layout_height="@dimen/_46sdp"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="@dimen/_13sdp"
        android:elevation="@dimen/_2sdp"
        android:gravity="center|left"
        android:hint="Время прививки"

        android:paddingStart="@dimen/_13sdp"
        android:textSize="@dimen/_12ssp"
        android:textColor="@color/textPrime"
        style="@style/Text_Regular"
        android:textColorHint="@color/textSecond"
        android:layout_marginEnd="@dimen/_18sdp"
        android:layout_marginStart="@dimen/_18sdp"
        android:background="@drawable/bg_for_edittext"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />


    <TextView
        android:id="@+id/textView3"
        style="@style/Text_Regular"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Название прививки"
        android:layout_marginTop="@dimen/_13sdp"
        android:textColor="@color/textSecond"
        android:textSize="@dimen/_12ssp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pet_vaccine_time" />


    <EditText
        android:id="@+id/pet_vaccine_name"
        android:layout_width="0dp"
        android:layout_height="@dimen/_46sdp"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="@dimen/_13sdp"
        android:elevation="@dimen/_2sdp"
        android:hint="Прививка от бешенства"

        android:paddingStart="@dimen/_13sdp"
        android:textSize="@dimen/_12ssp"
        android:textColor="@color/textPrime"
        style="@style/Text_Regular"
        android:textColorHint="@color/textSecond"
        android:layout_marginEnd="@dimen/_18sdp"
        android:layout_marginStart="@dimen/_18sdp"
        android:background="@drawable/bg_for_edittext"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />











    <com.google.android.material.button.MaterialButton
        android:id="@+id/saveBtn"
        android:layout_width="0dp"
        android:layout_height="@dimen/_46sdp"
        android:layout_marginBottom="@dimen/_18sdp"
        android:layout_marginStart="@dimen/_18sdp"
        android:layout_marginEnd="@dimen/_13sdp"
        android:text="Сохранить"
        style="@style/Text_Regular"
        android:textSize="@dimen/_12ssp"
        android:textColor="@color/white"
        app:backgroundTint="@color/main"
        app:cornerRadius="@dimen/_10sdp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />



</androidx.constraintlayout.widget.ConstraintLayout>